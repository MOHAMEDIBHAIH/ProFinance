                            <Setter Property="Background" Value="#7BD0FF"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="5,3"/>

                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="auto"/>
                    <GridViewColumn Header="Carnet" DisplayMemberBinding="{Binding Carnet}" Width="auto"/>
                    <GridViewColumn Header="Société" DisplayMemberBinding="{Binding Société}"/>
                    <GridViewColumn Header="Banque" DisplayMemberBinding="{Binding Banque}" />
                    <GridViewColumn Header="Compte" DisplayMemberBinding="{Binding Compte}"/>
                    <GridViewColumn Header="N° de Chéque" DisplayMemberBinding="{Binding N_de_Chéque}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="Auto"/>
                    <GridViewColumn Header="Délai de Paiement" DisplayMemberBinding="{Binding Delai_de_Paiement}"/>
                    <GridViewColumn Header="Bénéficiaires" DisplayMemberBinding="{Binding Bénéficiaires}" />
                    <GridViewColumn Header="Montant" DisplayMemberBinding="{Binding Montant}"/>
                    <GridViewColumn Header="Référence" DisplayMemberBinding="{Binding Référence}"  />
                    <GridViewColumn Header="Remis" DisplayMemberBinding="{Binding Remis}"  />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />

                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontWeight="Bold" FontSize="15"  Content="Total Effets en en attente   :"  HorizontalAlignment="Right" 
                VerticalAlignment="Center" Foreground="Black"/>
                <Label Grid.Column="1" FontWeight="Bold" FontSize="13" Content="0.00 DH"  HorizontalAlignment="Left" 
                VerticalAlignment="Center" Foreground="#0066FF"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />

                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontWeight="Bold" FontSize="15" Content="Total Effets non encaissés  :"  HorizontalAlignment="Right" 
                VerticalAlignment="Center" Foreground="Black"/>
                <Label Grid.Column="1" FontWeight="Bold" FontSize="13" Content="0.00 DH"  HorizontalAlignment="Left" 
    VerticalAlignment="Center" Foreground="#0066FF"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />

                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontWeight="Bold" FontSize="15" Content="Total Effets encaissés  :"  HorizontalAlignment="Right" 
                VerticalAlignment="Center" Foreground="Black"/>
                <Label Grid.Column="1" FontWeight="Bold" FontSize="13" Content="0.00 DH"  HorizontalAlignment="Left" 
                VerticalAlignment="Center" Foreground="#029457"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />

                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" FontWeight="Bold" FontSize="15" Content="Total Effets impayé  :   :"  HorizontalAlignment="Right" 
            VerticalAlignment="Center" Foreground="Black"/>
                <Label Grid.Column="1" FontWeight="Bold" FontSize="13"  Content="0.00 DH"  HorizontalAlignment="Left" 
               VerticalAlignment="Center" Foreground="#FF0000"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
