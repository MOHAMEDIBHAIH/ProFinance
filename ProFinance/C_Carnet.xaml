            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View >
                <GridView >
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Background" Value="#7BD0FF"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="5,3"/>

                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="auto"/>
                    <GridViewColumn Header="Carnet" DisplayMemberBinding="{Binding Carnet}" Width="auto"/>
                    <GridViewColumn Header="Société" DisplayMemberBinding="{Binding Société}"/>
                    <GridViewColumn Header="Banque" DisplayMemberBinding="{Binding Banque}" />
                    <GridViewColumn Header="Compte" DisplayMemberBinding="{Binding Compte}"/>
                    <GridViewColumn Header="N° de Chéque" DisplayMemberBinding="{Binding N_de_Chéque}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="Auto"/>
                    <GridViewColumn Header="Délai de Paiement" DisplayMemberBinding="{Binding Delai_de_Paiement}"/>
                    <GridViewColumn Header="Bénéficiaires" DisplayMemberBinding="{Binding Bénéficiaires}" />
                    <GridViewColumn Header="Montant" DisplayMemberBinding="{Binding Montant}"/>
                    <GridViewColumn Header="Référence" DisplayMemberBinding="{Binding Référence}"  />
                    <GridViewColumn Header="Remis" DisplayMemberBinding="{Binding Remis}"  />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
